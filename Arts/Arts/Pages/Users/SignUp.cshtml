@page
@model Arts.Pages.Users.SignUpModel
@{
    ViewData["Title"] = "Sign up user";
}

<br />

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}

<div class="container me-5 w-75">
    <form method="post" class="card p-5 w-50">
        <h2>Please Sign up :</h2>
        <div class="col-12">
            <label for="Username" class="form-label">Username</label>
            <div class="input-group has-validation">
                <span class="input-group-text">&</span>
                <input type="text" class="form-control" id="Username" name="Username" placeholder="Username" value="@Model.userInfo.Username" required>
                <div class="invalid-feedback">
                    Your username is required.
                </div>
            </div>
        </div>
        <div class="col-12">
            <label for="Useremail" class="form-label">Email <span class="text-muted">(Optional)</span></label>
            <input type="email" class="form-control" id="Useremail" name="Useremail" placeholder="you@example.com" value="@Model.userInfo.Useremail">
            <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
            </div>
        </div>
        <div class="col-12">
            <label for="Userpassword">Password</label>
            <input type="password" class="form-control" id="Userpassword" name="Userpassword" placeholder="Password" value="@Model.userInfo.Userpassword" required>
            <div class="invalid-feedback">
                Your password is required.
            </div>
        </div>
        <hr class="my-4">

        @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }

        <button class="w-100 btn btn-primary btn-lg" type="submit">Sign up</button>
    </form>
</div>
